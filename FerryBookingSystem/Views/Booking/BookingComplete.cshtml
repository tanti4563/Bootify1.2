@model FerryBookingSystem.Models.OrderResult

@{
    ViewBag.Title = "Booking Complete";
}

<div class="booking-success">
    <div class="alert alert-success">
        <h2><i class="glyphicon glyphicon-ok-circle"></i> Booking Complete!</h2>
        <p>Your payment has been processed successfully.</p>
    </div>

    <div class="panel panel-primary">
        <div class="panel-heading">
            <h3 class="panel-title">Booking Details</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-6">
                    <h4>Booking Code</h4>
                    <p><strong>@Model.BookingCode</strong></p>

                    <h4>Order Number</h4>
                    <p>@Model.OrderNo</p>

                    <h4>Route</h4>
                    <p>@Model.RouteNm</p>

                    <h4>Boat</h4>
                    <p>@Model.BoatNm</p>
                </div>

                <div class="col-md-6">
                    <h4>Departure Date</h4>
                    <p>@Model.DepartDate</p>

                    <h4>Departure Time</h4>
                    <p>@Model.DepartTime</p>

                    <h4>Number of Tickets</h4>
                    <p>@Model.NoOfTickets</p>

                    <h4>Total Amount</h4>
                    <p><strong>@Model.Total.ToString("N2") VND</strong></p>
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title">Contact Information</h3>
        </div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-4">
                    <h4>Customer Name</h4>
                    <p>@Model.CustomerNm</p>
                </div>
                <div class="col-md-4">
                    <h4>Phone</h4>
                    <p>@Model.CustomerPhone</p>
                </div>
                <div class="col-md-4">
                    <h4>Email</h4>
                    <p>@Model.CustomerEmail</p>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.CompanyNm))
            {
                <div class="row">
                    <div class="col-md-12">
                        <h4>Invoice Details</h4>
                        <p>
                            <strong>@Model.CompanyNm</strong><br />
                            Address: @Model.CompanyAddr<br />
                            Tax Code: @Model.Taxcode
                        </p>
                    </div>
                </div>
            }
        </div>
    </div>

    <div class="panel panel-success">
        <div class="panel-heading">
            <h3 class="panel-title">Tickets</h3>
        </div>
        <div class="panel-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Passenger Name</th>
                        <th>Seat</th>
                        <th>ID/Passport</th>
                        <th>Date of Birth</th>
                        <th>Ticket Type</th>
                        <th>Price</th>
                        <th>QR Code</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ticket in Model.TicketOrders)
                    {
                        <tr>
                            <td>@ticket.FullNm</td>
                            <td>@ticket.SeatNm</td>
                            <td>@ticket.IdNo</td>
                            <td>@ticket.YOB</td>
                            <td>@ticket.PassengerTypeNm</td>
                            <td>@ticket.UnitPrice.ToString("N2") VND</td>
                            <td>
                                @if (!string.IsNullOrEmpty(ticket.QRCode))
                                {
                                    <button class="btn btn-xs btn-info" data-toggle="modal" data-target="#qrModal" data-qrcode="@ticket.QRCode" data-seat="@ticket.SeatNm">
                                        View
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th colspan="5">Total</th>
                        <th>@Model.Total.ToString("N2") VND</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

    <div class="form-group">
        <a href="javascript:window.print()" class="btn btn-default"><i class="glyphicon glyphicon-print"></i> Print Booking</a>
        <a href="@Url.Action("Index", "Home")" class="btn btn-primary">Back to Home</a>
    </div>
</div>

<!-- QR Code Modal -->
<div class="modal fade" id="qrModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span>&times;</span></button>
                <h4 class="modal-title">Boarding Pass QR Code</h4>
            </div>
            <div class="modal-body text-center">
                <h4 id="qrSeat"></h4>
                <div id="qrCodeContainer"></div>
                <p class="text-muted">Please present this QR code when boarding.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/qrcode-generator@1.4.4/qrcode.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#qrModal').on('show.bs.modal', function (event) {
                var button = $(event.relatedTarget);
                var qrCode = button.data('qrcode');
                var seat = button.data('seat');

                $('#qrSeat').text('Seat: ' + seat);

                // Generate QR Code
                var typeNumber = 4;
                var errorCorrectionLevel = 'L';
                var qr = qrcode(typeNumber, errorCorrectionLevel);
                qr.addData(qrCode);
                qr.make();

                $('#qrCodeContainer').html(qr.createImgTag(5));
            });
        });
    </script>
}