@model IEnumerable<FerryBookingSystem.Models.BookingOrder>

@{
    ViewBag.Title = "My Bookings";
}

<h2>My Bookings</h2>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Your Booking History</h3>
    </div>
    <div class="panel-body">
        <p>Current user: <strong>@ViewBag.CurrentUser</strong></p>
        <p>Current time (UTC): <strong>@ViewBag.CurrentTime</strong></p>

        @if (!Model.Any())
        {
            <div class="alert alert-info">
                <p>You don't have any bookings yet.</p>
                <p>@Html.ActionLink("Book a ferry now", "SelectRoute", "Booking", null, new { @class = "btn btn-primary" })</p>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Booking Code</th>
                            <th>Route ID</th>
                            <th>Depart Date</th>
                            <th>Tickets</th>
                            <th>Total Amount</th>
                            <th>Created Date</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model)
                        {
                            <tr>
                                <td>@booking.BookingCode</td>
                                <td>@booking.RouteId</td>
                                <td>@booking.DepartDate.ToString("yyyy-MM-dd")</td>
                                <td>@booking.TotalNumber</td>
                                <td>@booking.TotalAmount.ToString("N2")</td>
                                <td>@booking.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                                <td>
                                    @if (booking.PaymentStatus == "Paid")
                                    {
                                        <span class="label label-success">Paid</span>
                                    }
                                    else if (booking.PaymentStatus == "Pending")
                                    {
                                        <span class="label label-warning">Pending</span>
                                    }
                                    else
                                    {
                                        <span class="label label-danger">@booking.PaymentStatus</span>
                                    }
                                </td>
                                <td>
                                    <a href="@Url.Action("BookingComplete", "Booking", new { bookingCode = booking.BookingCode })" class="btn btn-sm btn-info">
                                        <i class="glyphicon glyphicon-search"></i> View
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

<div>
    <a href="@Url.Action("SelectRoute", "Booking")" class="btn btn-primary">Book New Ferry Ticket</a>
    <a href="@Url.Action("Index", "Home")" class="btn btn-default">Back to Home</a>
</div>