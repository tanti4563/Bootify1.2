@model IEnumerable<FerryBookingSystem.Models.RouteInfo>

@{
    ViewBag.Title = "Trang chủ";
}

<div class="jumbotron">
    <h1>Boatify - Hệ thống đặt vé tàu</h1>
    <p class="lead">Chào mừng bạn đến với Boatify. Đặt vé tàu dễ dàng trực tuyến!</p>

    @if (Request.IsAuthenticated)
    {
        <p><a href="@Url.Action("SelectRoute", "Booking")" class="btn btn-primary btn-lg">Đặt vé ngay &raquo;</a></p>
    }
    else
    {
        <p>
            <a href="@Url.Action("Login", "Account", new { returnUrl = Url.Action("SelectRoute", "Booking") })" class="btn btn-primary btn-lg">Đăng nhập để đặt vé &raquo;</a>
            <a href="@Url.Action("Register", "Account")" class="btn btn-default btn-lg">Đăng ký &raquo;</a>
        </p>
        <div class="alert alert-info">
            <p><strong>Vui lòng đăng nhập hoặc đăng ký để đặt vé tàu.</strong></p>
            <p>Tạo tài khoản để xem lịch sử đặt vé và nhận các ưu đãi đặc biệt!</p>
        </div>
    }
</div>

@if (Request.IsAuthenticated)
{
    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Chào mừng trở lại, @User.Identity.Name!</h3>
                </div>
                <div class="panel-body">
                    <p>Cảm ơn bạn đã sử dụng hệ thống đặt vé tàu của chúng tôi.</p>
                    <p><a href="@Url.Action("MyBookings", "Booking")" class="btn btn-info">Xem vé của tôi</a></p>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <h2>Tuyến đường có sẵn</h2>

            @if (!Model.Any())
            {
                <p>Hiện tại không có tuyến đường nào. Vui lòng thử lại sau.</p>

                if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.ErrorMessage
                    </div>
                }
            }
            else
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Tuyến đường</th>
                            <th>Mã</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var route in Model)
                        {
                            <tr>
                                <td>@route.Label</td>
                                <td>@route.Abbrev</td>
                                <td>
                                    <a href="@Url.Action("SelectRoute", "Booking")" class="btn btn-sm btn-primary">Đặt tuyến này</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-12">
            <h2>Tuyến đường có sẵn</h2>

            @if (!Model.Any())
            {
                <p>Hiện tại không có tuyến đường nào. Vui lòng thử lại sau.</p>

                if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-danger">
                        @ViewBag.ErrorMessage
                    </div>
                }
            }
            else
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Tuyến đường</th>
                            <th>Mã</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var route in Model)
                        {
                            <tr>
                                <td>@route.Label</td>
                                <td>@route.Abbrev</td>
                                <td>
                                    <a href="@Url.Action("SelectRoute", "Booking")" class="btn btn-sm btn-primary">Đặt tuyến này</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }

            <div class="alert alert-info">
                <p><strong>Lưu ý:</strong> @Html.ActionLink("Đăng ký", "Register", "Account") tài khoản để xem lịch sử đặt vé và nhận các ưu đãi đặc biệt!</p>
            </div>
        </div>
    </div>
}