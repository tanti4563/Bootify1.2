@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                    <i class="glyphicon glyphicon-user"></i>
                    <strong>Xin chào, @User.Identity.GetUserName().Split('@')[0]!</strong> <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li>
                        <div class="navbar-login">
                            <div class="row">
                                <div class="col-lg-12">
                                    <p class="text-center">
                                        <span class="glyphicon glyphicon-user icon-size"></span>
                                    </p>
                                    <p class="text-center"><strong>@User.Identity.Name</strong></p>
                                    <p class="text-center small">@DateTime.Now.ToString("dd/MM/yyyy HH:mm:ss")</p>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="divider"></li>
                    <li><a href="@Url.Action("Index", "Manage")"><i class="glyphicon glyphicon-cog"></i> Tài khoản của tôi</a></li>
                    <li><a href="@Url.Action("MyBookings", "Booking")"><i class="glyphicon glyphicon-list"></i> Vé của tôi</a></li>
                    <li role="separator" class="divider"></li>
                    <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="glyphicon glyphicon-log-out"></i> Đăng xuất</a></li>
                </ul>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Đăng ký", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Đăng nhập", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}